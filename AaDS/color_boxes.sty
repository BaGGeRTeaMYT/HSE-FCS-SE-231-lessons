\newenvironment{Theorem}[1]{%
\begin{tcolorbox}[%
  colback=blue!5!white,    % Цвет фона
  colframe=blue!50!black, % Цвет рамки
  arc=3mm,                % Радиус скругления углов
  title=Теорема,    % Заголовок
  #1%
]%
}{%
\end{tcolorbox}
}

\newenvironment{Definition}{%
\begin{tcolorbox}[%
  colback=green!15!white,  
  colframe=green!70!white,  
  arc=3mm,
  title=Определение
]
}{%
\end{tcolorbox}
}

